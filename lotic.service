##Place file in the following destination: /etc/systemd/system/ ###

[Unit]
Description=LOTIC machine learning program for migratory fish detection
After=multi-user.target

[Service]
Type=idle
ExecStart=/usr/bin/python3 /home/nvidia/LOTICv2/main.py ###ADD POSITIONAL ARGUMENTS HERE###
WorkingDirectory=/home/nvidia/LOTICv2
StandardOutput=file:/home/nvidia/main_output.log
StandardError=file:/home/nvidia/error_file.log
Restart=always
RestartSec=120
User=nvidia

[Install]
WantedBy=multi-user.target
